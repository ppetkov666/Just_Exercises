@model Car_Rental_Project.Models.Renting.RentCarModel

<h1 class="text-center">Are you sure you want to rent @Model.CarName? </h1>

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <img src="@Model.CarImageUrl" class="img-responsive" />
    </div>
</div>
<h1 class="text-center" style="color:red;">
    @Model.Days Days * @Model.PricePerDay BGN/Day = @Model.TotalPrice  Leva
</h1>

@using (Html.BeginForm("Rent", "Cars", FormMethod.Post))
{
    // we send it as parameters to the action Rent(int carId, int days)
    @Html.HiddenFor(c => c.CarId)
    @Html.HiddenFor(c => c.Days)

    <div id="rent" class="text-center">
        <input class="btn btn-primary" type="submit" value="Rent" />
        <a href="/Cars/Details/@Model.CarId" class="btn btn-default"><< Back</a>
    </div>
}


